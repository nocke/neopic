// REF https://eslint.org/docs/user-guide/configuring
// ESLintâ€™s JSON files also allow JavaScript-style comments.
{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "MAIN_WINDOW_VITE_DEV_SERVER_URL": "readonly",
    "MAIN_WINDOW_VITE_NAME": "readonly"
  },
  "extends": [
    "standard",
    "plugin:svelte/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": [
        "*.svelte"
      ],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": "off"
      },
      "parser": "svelte-eslint-parser"
    },
    // no whining on unused (global) vars in central styles file
    {
      "files": [
        "src/types.d.ts"
      ],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ],
  "rules": {
    "no-tabs": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    // tolerate but do not enfore comma-dangle
    "comma-dangle": "off",
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 3,
        "maxBOF": 1,
        "maxEOF": 1
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
