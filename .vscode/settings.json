{
  "workbench.colorCustomizations": {
    "sideBar.background": "#18182A",
    "tab.inactiveBackground": "#202030",
    "tab.activeBackground": "#558"
  },

  "eslint.validate": ["javascript", "typescript", "svelte"],
  "eslint.options": {
    "extensions": [".js", ".ts", ".mts", ".svelte"]
  },
  "eslint.workingDirectories": [{ "directory": "./src", "changeProcessCWD": true }],
  "eslint.probe": ["javascript", "typescript", "html", "svelte"],

  "search.exclude": {
    "**/node_modules": true,
    "**/.vite": true,
    "**/dist": true
  },

  "svelte.plugin.svelte.diagnostics.enable": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  // REF www.techiediaries.com/enable-json-comments-vs-code
  "files.associations": {
    ".eslintrc.json": "jsonc",
    "tsconfig.json": "jsonc"
    // "*.yml": "yaml"
  },

  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  },

  // decouple zoom from other vscode instances
  "window.zoomLevel": -1
}
