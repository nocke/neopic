{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  // could be more preformant (less scanning)
  "include": [
    // only here to avoid bogus warning stackoverflow.com/a/41211721
    // do not use “.{ts,d.ts,svelte}”, gives trouble
    "forge.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte"
  ]
}
