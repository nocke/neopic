{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020", // Ensure compatibility with current Node.js versions

    "allowJs": true,
    "strict": true, // no longer in 7.4 template
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "test/**/*.ts",
    "src/**/*.ts"
  ]
}
