{
  "name": "neopic",
  "productName": "neopic-e-product",
  "version": "0.2.0",
  "description": "electron based neopic",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "clean": "npx --yes rimraf node_modules .vite out .cache .next .nuxt .npm",
    "preversion": "git diff-index --quiet HEAD -- || (echo 'Uncommitted changes! Please commit or stash them.' && exit 1)",
    "postversion": "git push && git push --tags",

    "vite:build-main": "vite build --config vite.main.config.ts",
    "vite:build-preload": "vite build --config vite.preload.config.ts",
    "vite:build-renderer": "vite build --config vite.renderer.config.ts"

  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "bitbucket.org:fnocke/neopic-e.git"
  },
  "keywords": [],
  "license": "UNLICENSED",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "electron": "28.1.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "ts-node": "^10.0.0",
    "typescript": "~4.5.4"
  }
}
